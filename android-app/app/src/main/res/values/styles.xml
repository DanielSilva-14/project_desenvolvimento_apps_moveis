<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item> <!-- Hint color when EditText is empty -->
        <item name="hintTextColor">@color/white</item> <!-- Floating label color -->
        <item name="colorControlNormal">@color/white</item> <!-- Underline and icon color when EditText is inactive -->
        <item name="colorControlActivated">@color/white</item> <!-- Underline and icon color when EditText is active -->
        <item name="colorControlHighlight">@color/white</item> <!-- Color of the EditText box stroke upon focus -->
        <item name="android:textColor">@color/white</item> <!-- Text color inside EditText -->
    </style>
</resources>